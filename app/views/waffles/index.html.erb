<h1>Gofry</h1>

<%= link_to 'Nowy gofr', new_waffle_path %>

<%= form_tag destroy_multiple_waffles_path, method: :delete do %>
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-1"></th>
                <th class="col-md-1"></th>
                <th class="col-md-6">Nazwa</th>
                <th class="col-md-3">Cena</th>
                <th class="col-md-1" colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @waffles.each do |w| %>
                <tr>
                    <td><%= check_box_tag "waffles[]", w.id %></td>
                    <td style="width:100px"><%= image_tag(w.image.small) %></td>
                    <td><%= w.name %></td>
                    <td><%= w.price %> zł</td>
                    <td><%= link_to 'Szczegóły', waffle_path(w) %></td>
                    <td><%= link_to 'Edytuj', edit_waffle_path(w) %></td>
                    <td><%= link_to 'Usuń', waffle_path(w),
                            method: :delete,
                            data: { confirm: 'Czy napewno chcesz usunąć tego gofra?' } %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<%= submit_tag "Usuń zaznaczone" %>
<% end %>